@using Libiada.Core.Extensions;

@model Multisequence

@{
    ViewBag.Title = "Delete";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Multisequence</h4>
    <hr />
    <dl>
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>@Html.DisplayNameFor(model => model.Nature)</dt>
        <dd>@Model.Nature.GetDisplayValue()</dd>
    </dl>
</div>
<h4>@Html.DisplayNameFor(model => model.ResearchObjects)</h4>

<table class="table table-bordered table-hover">
    <tr>
        <th>@Html.DisplayNameFor(model => model.ResearchObjects.First().Name)</th>
        <th>@Html.DisplayNameFor(model => model.ResearchObjects.First().Description)</th>
        <th>@Html.DisplayNameFor(model => model.ResearchObjects.First().Created)</th>
        <th>@Html.DisplayNameFor(model => model.ResearchObjects.First().Modified)</th>
        <th>@Html.DisplayNameFor(model => model.ResearchObjects.First().Nature)</th>
        <th>@Html.DisplayNameFor(model => model.ResearchObjects.First().Group)</th>
        <th>@Html.DisplayNameFor(model => model.ResearchObjects.First().SequenceType)</th>
        <th>@Html.DisplayNameFor(model => model.ResearchObjects.First().MultisequenceNumber)</th>
        <th>@Html.DisplayNameFor(model => model.ResearchObjects.First().CollectionCountry)</th>
        <th>@Html.DisplayNameFor(model => model.ResearchObjects.First().CollectionDate)</th>
    </tr>
    @foreach (var item in Model.ResearchObjects)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
            <td>@Html.DisplayFor(modelItem => item.Created)</td>
            <td>@Html.DisplayFor(modelItem => item.Modified)</td>
            <td>@item.Nature.GetDisplayValue()</td>
            <td>@item.Group.GetDisplayValue()</td>
            <td>@item.SequenceType.GetDisplayValue()</td>
            <td>@Html.DisplayFor(modelItem => item.MultisequenceNumber)</td>
            <td>@Html.DisplayFor(modelItem => item.CollectionCountry)</td>
            <td>@Html.DisplayFor(modelItem => item.CollectionDate)</td>
        </tr>
    }
</table>
@using (Html.BeginForm())
{
    <div class="mb-3">
        <input type="submit" value="Delete" class="btn btn-secondary" />
        @Html.ActionLink("Back to List", "Index")
    </div>
}

