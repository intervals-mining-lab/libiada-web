@{
    ViewBag.Title = "Order transformation convergence result";
}
<script src="~/js/Angular/Components/loadingWindow.js" asp-append-version="true"></script>

<h2>@ViewBag.Title</h2>
@if (ViewBag.Error == null)
{
    @Html.Partial("_AngularControllerInitializer", "OrderTransformationResult")
    <div ng-controller="OrderTransformationResultCtrl">
        <loading-window loading="loading" loading-screen-header="loadingScreenHeader"></loading-window>
        <div ng-disabled="loading">
            <table class="table table-bordered table-hover table-sm" ng-cloak>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Transformation</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="transformation in ::transformationsList">
                        <td ng-bind="::$index + 1" />
                        <td ng-bind="::transformation" />
                    </tr>
                </tbody>
            </table>
            <div class="font-monospace my-3">
                <h6>Loop iteration = {{::loopIteration}}</h6>
                <h6>Last iteration = {{::lastIteration}}</h6>
                <h6 class="mb-3">Transformations repeated {{::iterationsCount}} times</h6>
                <h5>Resulting sequence:</h5>
                <div ng-bind="::chain"></div>
            </div>
        </div>
    </div>
}
