@{
    ViewBag.Title = "WAV files processor";
}

<h2>@ViewBag.Title</h2>

@Html.Partial("_AngularControllerInitializer", "CustomCalculation")

@using (Html.BeginForm("Index", "MusicFiles", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div ng-controller="CustomCalculationCtrl">
        <h4>Sequence and parameters</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row mb-2">
            <label class="col-form-label col-md-2" for="file">WAV files:</label>
            <div class="col-md-10">
                <input class="form-control" type="file" name="file" id="file" multiple />
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-md-10">
                <input type="submit" value="Calculate" class="btn btn-secondary" />
            </div>
        </div>
    </div>
}
