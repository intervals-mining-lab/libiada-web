@{
    Layout = "_EmptyLayout";
    ViewBag.Title = "Libiada - Integral characterisitics calculation result";
}

<h2>@ViewBag.Title</h2>

@if (ViewBag.Error == null)
{
    <div ng-controller="CalculationResultCtrl">
        <loading-window loading="loading" loading-screen-header="loadingScreenHeader"></loading-window>
        <div ng-disabled="loading">
            <ul id='nav' class="nav nav-tabs" role="tablist">
                <li class="nav-item" role="presentation" title="Charts">
                    <button class="nav-link active"
                            id="charts-tab"
                            data-bs-toggle="tab"
                            data-bs-target="#charts-tab-pane"
                            type="button"
                            role="tab"
                            aria-controls="charts-tab-pane"
                            aria-selected="true">
                        Charts
                    </button>
                </li>
                <li class="nav-item" role="presentation" title="Data export">
                    <button class="nav-link"
                            id="export-tab"
                            data-bs-toggle="tab"
                            data-bs-target="#export-tab-pane"
                            type="button"
                            role="tab"
                            aria-controls="export-tab-pane"
                            aria-selected="false">
                        Data export
                    </button>
                </li>
                <li class="nav-item" role="presentation" title="Data table" ng-click="renderResultsTable()">
                    <button class="nav-link"
                            id="data-table-tab"
                            data-bs-toggle="tab"
                            data-bs-target="#data-table-tab-pane"
                            type="button"
                            role="tab"
                            aria-controls="data-table-tab-pane"
                            aria-selected="false">
                        Results
                    </button>
                </li>
            </ul>
            <div class="tab-content">
                <div id="charts-tab-pane"
                     class="tab-pane fade show active"
                     role="tabpanel"
                     aria-labelledby="charts-tab"
                     tabindex="0">
                    <div ng-repeat="characteristic in chartCharacteristics">
                        <div class="row mb-1 mt-2">
                            <label class="col-form-label col-md-2" for="characteristic{{$index}}">Characteristic:</label>
                            <div class="col-md-10">
                                <select class="form-select"
                                        title="Characteristic"
                                        ng-model="characteristic.value"
                                        ng-options="c.Text for c in ::characteristicsList"
                                        id="characteristic{{$index}}"></select>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="offset-md-2 col-md-10">
                                <button type="button"
                                        class="btn btn-danger"
                                        ng-click="deleteCharacteristic(characteristic)"
                                        ng-disabled="chartCharacteristics.length <= 1">
                                    Delete characteristic
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="offset-md-2 col-md-10">
                            <button type="button"
                                    class="btn btn-success"
                                    ng-click="addCharacteristic()"
                                    ng-disabled="chartCharacteristics.length == characteristicsList.length">
                                Add characteristic
                            </button>
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label class="col-form-label col-md-2" for="height">Height:</label>
                        <div class="col-md-10">
                            <input class="form-control" name="height" id="height" type="number" min="500" step="20" ng-model="height" />
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label class="col-form-label col-md-2" for="width">Width:</label>
                        <div class="col-md-10">
                            <input class="form-control" name="width" id="width" type="number" min="400" step="20" ng-model="width" />
                        </div>
                    </div>
                    <div class="form-check my-2 offset-md-2">
                        <input type="checkbox"
                               class="form-check-input"
                               name="showLegend"
                               id="showLegend"
                               ng-model="legendSettings.show" />
                        <label class="form-check-label" for="showLegend">
                            Draw legend
                        </label>
                    </div>
                    <div class="row mb-1">
                        <div class="offset-md-2 col-md-2">
                            <input type="button" class="btn btn-secondary" ng-click="draw()" value="Draw" />
                        </div>
                    </div>
                    <div class="row" id="chart-visibility-buttons" ng-show="chartDisplayed">
                        <div class="col-md-4 mt-2 btn-group" role="group" aria-label="Legend control buttons">
                            <button type="button" class="btn btn-outline-secondary btn-sm" ng-click="legendSetVisibilityForAll(true)">
                                Show all
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" ng-click="legendSetVisibilityForAll(false)">
                                Hide all
                            </button>
                        </div>
                    </div>
                    <div id="chart" class="font-monospace">
                    </div>
                </div>
                <div id="export-tab-pane"
                     class="tab-pane fade"
                     role="tabpanel"
                     aria-labelledby="export-tab"
                     tabindex="0">
                    <div class="row my-2">
                        <label class="col-form-label col-md-2" for="searchQuery">Excel file name:</label>
                        <div class="col-md-10">
                            <input type="text"
                                   class="form-control"
                                   name="excelFileName"
                                   id="excelFileName"
                                   placeholder="results"
                                   ng-model="excelFileName" />

                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="offset-md-2 col-md-10">
                            <input type="button"
                                   class="btn btn-secondary"
                                   ng-click="exportToExcel()"
                                   value="Download results as excel file" />
                        </div>
                    </div>
                </div>
                <div id="data-table-tab-pane"
                     class="tab-pane fade"
                     role="tabpanel"
                     aria-labelledby="data-table-tab"
                     tabindex="0">
                    <table id="characteristicsTable" st-table="characteristics" class="table table-bordered table-hover table-sm mt-2" ng-cloak>
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Sequence name</th>
                                <th ng-repeat="characteristicName in ::characteristicNames" ng-bind="::characteristicName" />
                            </tr>
                        </thead>
                        <tbody id="calculationResults">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
    <script src="~/lib/d3/d3.min.js" asp-append-version="true"></script>
    <script src="~/lib/plotly.js/plotly.min.js" asp-append-version="true"></script>
    <script src="~/js/Angular/Components/loadingWindow.js" asp-append-version="true"></script>
    <script src="~/lib/exceljs/exceljs.min.js" asp-append-version="true"></script>
    @Html.Partial("_AngularControllerInitializer", "CalculationResult")
    }
}
