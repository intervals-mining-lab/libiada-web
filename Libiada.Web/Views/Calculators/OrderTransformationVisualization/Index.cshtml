@{
    ViewBag.Title = "Order transformation visualization";
}

<h2>@ViewBag.Title</h2>

@{
    await Html.RenderPartialAsync("_AngularControllerInitializer", "OrderTransformationVisualization");
}

@using (Html.BeginForm())
{
    <div ng-controller="OrderTransformationVisualizationCtrl">
        @Html.AntiForgeryToken()
        <h4>Parameters</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row mb-1">
            <label class="col-form-label col-md-2" for="length">Generated sequnces length:</label>
            <div class="col-md-10">
                <input class="form-control" name="length" type="number" value="4" min="2" id="length" />
                @Html.ValidationMessage("length", "", new { @class = "text-danger" })
            </div>
        </div>
        <matters-submit submit-name="Generate orders"></matters-submit>
    </div>
}

@section Scripts {
    <script src="~/js/Angular/Components/mattersSubmit.js" asp-append-version="true"></script>
}