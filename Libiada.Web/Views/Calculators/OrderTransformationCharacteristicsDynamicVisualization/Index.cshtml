@{
    ViewBag.Title = "Transformation of order of sequences";
}

<script src="~/js/Angular/Components/orderTransformations.js" asp-append-version="true"></script>
<script src="~/js/Angular/Components/characteristic.js" asp-append-version="true"></script>

@Html.Partial("_AngularControllerInitializer", "OrderTransformerController")

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div ng-controller="OrderTransformerCtrl">
        <h4>Sequences and parameters</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Partial("_NatureSelect")
        <matters-table matters="matters"
                       nature="nature"
                       groups="groups"
                       sequence-types="sequenceTypes"
                       maximum-selected-matters="::maximumSelectedMatters"
                       selected-matters-count="selectedMattersCount">
        </matters-table>
        <order-transformations transformations="::transformations">
        </order-transformations>
        <characteristic characteristic-types="::characteristicTypes"
                        characteristics-dictionary="::characteristicsDictionary"
                        nature="nature"
                        notations="::notations"
                        languages="::languages"
                        translators="::translators"
                        pause-treatments="::pauseTreatments"
                        trajectories="::trajectories">
        </characteristic>
        @Html.Partial("_MattersSubmit")
    </div>
}
