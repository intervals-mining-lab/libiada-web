@{
    ViewBag.Title = "Congeneric sequences characteristics";
}
<script src="~/js/Angular/Components/loadingWindow.js" asp-append-version="true"></script>
<h2>@ViewBag.Title</h2>

@if (ViewBag.Error == null)
{
    @Html.Partial("_AngularControllerInitializer", "CalculationResult")

    <div ng-controller="CalculationResultCtrl">

        <div ng-repeat="characteristic in ::characteristics">
            <p ng-bind="::matterNames[$index]"></p>
            <table class="table table-bordered table-hover" id="resultTable">
                <thead>
                    <tr>
                        <th>Element</th>
                        <th ng-repeat="characteristicName in ::characteristicNames" ng-bind="::characteristicName" />
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="ch in ::characteristics[$index][0]">
                        <td ng-bind="::elementNames[$parent.$index][$index]" />
                        <td ng-repeat="characteristic in ::characteristics[$parent.$index]" ng-bind="::characteristic[$index].Value" />
                    </tr>
                </tbody>
            </table>
        </div>
        <div id="visualization_container" style="width: 800px; height: 500px"></div>
        <div class="form-check by-2">
            <input type="checkbox"
                   class="form-check-input"
                   name="Rank"
                   id="Rank"
                   value="true"
                   onclick="SwitchXAxis()" />
            <label class="form-check-label" for="Rank">Rank distribution</label>
        </div>
        <div class="form-check mb-2">
            <input type="checkbox"
                   class="form-check-input"
                   name="allGraphics"
                   id="allGraphics"
                   value="true"
                   disabled="disabled"
                   onclick="SwitchYAxis()" />
            <label class="form-check-label" for="allGraphics">Show all charts</label>
        </div>
        <div class="form-check mb-3">
            <input type="checkbox"
                   class="form-check-input"
                   name="logarithmicScale"
                   id="logarithmicScale"
                   value="true"
                   disabled="disabled" />
            <label class="form-check-label" for="logarithmicScale">Log scale</label>
        </div>
        <div class="row mb-1">
            <label class="col-form-label col-md-2" for="firstCharacteristic">First characteristic:</label>
            <div class="col-md-10">
                <select class="form-select"
                        title="First characteristic"
                        ng-model="firstCharacteristic"
                        ng-options="c.Text for c in ::characteristicsList"
                        id="firstCharacteristic"></select>
            </div>
        </div>
        <div class="row mb-1">
            <label class="col-form-label col-md-2" for="secondCharacteristic">Second characteristic:</label>
            <div class="col-md-10">
                <select class="form-select"
                        title="Second characteristic"
                        ng-model="secondCharacteristic"
                        ng-options="c.Text for c in ::characteristicsList"
                        id="secondCharacteristic"></select>
            </div>
        </div>
        <div class="form-check mb-2">
            <input type="checkbox"
                   class="form-check-input"
                   name="showLegend"
                   id="showLegend"
                   ng-model="legendSettings.show" />
            <label class="form-check-label" for="showLegend">
                Draw legend
            </label>
        </div>
        <input type="button" class="btn btn-secondary mb-2" ng-click="draw()" value="Draw" />
    </div>
}

@section Scripts {
    <script src="~/lib/d3/d3.js" asp-append-version="true"></script>
}
