@{
    ViewBag.Title = "Order Calculation";
}

<h2>@ViewBag.Title</h2>

@{
    await Html.RenderPartialAsync("_AngularControllerInitializer", "OrderCalculation");
}

@using (Html.BeginForm())
{
    <div ng-controller="OrderCalculationCtrl">
        @Html.AntiForgeryToken()
        <h4>Parameters</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row mb-1">
            <label class="col-form-label col-md-2" for="length">Generated sequnces length:</label>
            <div class="col-md-10">
                <input class="form-control" name="length" type="number" value="4" min="0" id="length" />
                @Html.ValidationMessage("length", "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row mb-1">
            <label class="col-form-label col-md-2" for="alphabetCardinality">Generated sequnces alphabet cardinality:</label>
            <div class="col-md-10">
                <input class="form-control" name="alphabetCardinality" type="number" value="4" min="0" id="alphabetCardinality" />
                @Html.ValidationMessage("alphabetCardinality", "", new { @class = "text-danger" })
            </div>
        </div>
        <fieldset>
            <legend>Order generation type:</legend>
            <div class="form-check">
                <input type="radio" class="form-check-input" name="generateStrict" id="generateStrict" value="true" checked />
                <label class="form-check-label" for="generateStrict">
                    Generate orders with only given alphabet cardinality
                </label>
            </div>
            <div class="form-check">
                <input type="radio" class="form-check-input" name="generateStrict" id="generateAll" value="false" />
                <label class="form-check-label" for="generateAll">
                    Generate orders with alphabet cardinality less or equal to given
                </label>
            </div>
        </fieldset>
        <hr />
        <characteristics characteristic-types="::characteristicTypes"
                         characteristics-dictionary="::characteristicsDictionary"
                         nature="nature"
                         notations="::notations"
                         languages="::languages"
                         translators="::translators"
                         pause-treatments="::pauseTreatments"
                         trajectories="::trajectories"
                         hide-notation="true">
        </characteristics>
        @{
            await Html.RenderPartialAsync("_MattersSubmit");
}
    </div>
}

@section Scripts {
    <script src="~/js/Angular/Components/characteristics.js" asp-append-version="true"></script>
}
