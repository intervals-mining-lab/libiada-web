@model Subsequence

@Html.LabelFor(model => model.Feature, new { @class = "col-form-label col-md-2 h4" })
<div ng-repeat="feature in ::features">
    <div class="form-check">
        <input type="checkbox"
               class="form-check-input"
               name="features"
               id="{{::'features'+feature.Value}}"
               checked
               ng-value="::feature.Value"
               ng-model="feature.Selected"
               ng-change="filterByFeature(feature)" />
        <label class="form-check-label" for="{{::'features'+feature.Value}}">
            {{::feature.Text}}
        </label>
    </div>
</div>
<div class="btn-group mt-2" role="group" aria-label="Select / unselect vsible matters">
    <input type="button" class="btn btn-secondary" ng-click="setCheckBoxesState(features, false, filterByFeature)" value="Uncheck All" />
    <input type="button" class="btn btn-success" ng-click="setCheckBoxesState(features, true, filterByFeature)" value="Check All" />
</div>
