{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs", // изменено с "none" на "commonjs"
    "sourceMap": true,
    "outDir": "./wwwroot/js/Angular/Controllers/",
    "rootDir": "./wwwroot/js/Angular/Controllers/",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, // добавлено
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": false,
    "removeComments": false,
    "declaration": false,
    "types": [ "angular" ],
    "typeRoots": [
      "node_modules/@types",
      "wwwroot/js/Angular"
    ],
    "moduleResolution": "node" // добавлено
  },
  "include": [
    "wwwroot/js/Angular/Controllers/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "wwwroot/lib"
  ]
}
