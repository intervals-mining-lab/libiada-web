@{
    ViewBag.Title = "Sequences alignment";
}

@Scripts.Render("~/bundles/Characteristic")
@Html.Partial("_AngularControllerInitializer", "SequencesAlignmentController")

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal" ng-controller="SequencesAlignmentCtrl">
        <h4>Sequences and parameters</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <matters-table matters="matters"
                       nature="nature"
                       groups="groups"
                       sequence-types="sequenceTypes"
                       maximum-selected-matters="::maximumSelectedMatters"
                       selected-matters-count="selectedMattersCount">
        </matters-table>
        @Html.Partial("_FeaturesSelect")
        <characteristic characteristic-types="::characteristicTypes"
                        characteristics-dictionary="::characteristicsDictionary"
                        nature="nature"
                        notations="::notations"
                        languages="::languages"
                        translators="::translators"
                        pause-treatments="::pauseTreatments"
                        trajectories="::trajectories">
        </characteristic>

        <fieldset>
            <legend>Alignment validation type:</legend>
            <div class="col-md-offset-2 col-md-10">
                <input type="radio" name="validationType" id="validationTypeSimilarity" value="Similarity" checked />
                <label for="validationTypeSimilarity">
                    Similarity
                </label>
            </div>
            <div class="col-md-offset-2 col-md-10">
                <input type="radio" name="validationType" id="validationTypeDifference" value="Difference" />
                <label for="validationTypeDifference">
                    Difference
                </label>
            </div>
            <div class="col-md-offset-2 col-md-10">
                <input type="radio" name="validationType" id="validationTypeNormalizedDifference" value="NormalizedDifference" />
                <label for="validationTypeNormalizedDifference">
                    Normalized difference
                </label>
            </div>
            <div class="col-md-offset-2 col-md-10">
                <input type="radio" name="validationType" id="validationTypeEquality" value="Equality" />
                <label for="validationTypeEquality">
                    Equality of elements
                </label>
            </div>
        </fieldset>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="checkbox" name="cyclicShift" id="cyclicShift" value="true" />
                <input type="hidden" name="cyclicShift" value="false" />
                <label for="cyclicShift">
                    Cyclic shift
                </label>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="checkbox" name="sort" id="sort" value="true" />
                <input type="hidden" name="sort" value="false" />
                <label for="sort">
                    Sort into rank distribution
                </label>
            </div>
        </div>
        <hr />
        @Html.Partial("_MattersSubmit")
    </div>
}
