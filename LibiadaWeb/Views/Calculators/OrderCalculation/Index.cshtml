@{
    ViewBag.Title = "Order Calculation";
}

<h2>@ViewBag.Title</h2>

@Scripts.Render("~/bundles/Characteristics")

@Html.Partial("_AngularControllerInitializer", "OrderCalculationController")

@using (Html.BeginForm())
{
    <div ng-controller="OrderCalculationCtrl">
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>Parameters</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2" for="length">Generated sequnces length:</label>
                <div class="col-md-10">
                    <input class="form-control" name="length" type="number" value="4" min="0" id="length" />
                    @Html.ValidationMessage("length", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="alphabetCardinality">Generated sequnces alphabet cardinality:</label>
                <div class="col-md-10">
                    <input class="form-control" name="alphabetCardinality" type="number" value="4" min="0" id="alphabetCardinality" />
                    @Html.ValidationMessage("alphabetCardinality", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label>
                        <input type="radio" name="generateStrict" id="generateStrict" value="true" checked />
                        Generate orders with only given alphabet cardinality
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label>
                        <input type="radio" name="generateStrict" id="generateStrict" value="false" />
                        Generate orders with alphabet cardinality less or equal to given
                    </label>
                </div>
            </div>
            <hr />
            <br />
            <characteristics characteristic-types="::characteristicTypes"
                             characteristics-dictionary="::characteristicsDictionary"
                             nature="nature"
                             notations="::notations"
                             languages="::languages"
                             translators="::translators"
                             pause-treatments="::pauseTreatments"
                             hide-notation="true">
            </characteristics>
            <br />
            @Html.Partial("_MattersSubmit")
        </div>
    </div>
}
