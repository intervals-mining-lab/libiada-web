@{
    ViewBag.Title = "Batch images import";
}

@Html.Partial("_AngularControllerInitializer", "BatchPoemsImportController")

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Index", "BatchImagesImport", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" ng-controller="BatchPoemsImportCtrl">
    <div class="form-group">
        <label class="control-label col-md-2" for="files">Images files:</label>
        <div class="col-md-10">
            <input type="file" name="files" id="files" multiple />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" ng-disabled="files.length < 1" />
        </div>
    </div>
</div>
}
