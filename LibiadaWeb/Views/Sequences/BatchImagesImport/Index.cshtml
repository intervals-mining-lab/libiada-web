@{
    ViewBag.Title = "Batch images import";
}

@Html.Partial("_AngularControllerInitializer", "BatchPoemsImportController")

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Index", "BatchImagesImport", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div ng-controller="BatchPoemsImportCtrl">
        <div class="row mb-1">
            <label class="col-form-label col-md-2" for="files">Images files:</label>
            <div class="col-md-10">
                <input type="file" name="files" id="files" multiple />
            </div>
        </div>
        <div class="row mb-1">
            <div class="offset-md-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-secondary" ng-disabled="files.length < 1" />
            </div>
        </div>
    </div>
}
