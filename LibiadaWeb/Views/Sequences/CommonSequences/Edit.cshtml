@model CommonSequence

@{
    ViewBag.Title = "Edit sequence";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h4>Sequence</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="row mb-1">
        @Html.LabelFor(model => model.Notation, "Notation", new { @class = "col-form-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Notation", null, new { @class = "form-select" })
            @Html.ValidationMessageFor(model => model.Notation, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-1">
        @Html.LabelFor(model => model.MatterId, "Matter", htmlAttributes: new { @class = "col-form-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("MatterId", null, htmlAttributes: new { @class = "form-select" })
            @Html.ValidationMessageFor(model => model.MatterId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-1">
        @Html.LabelFor(model => model.RemoteDb, "Remote database", htmlAttributes: new { @class = "col-form-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("RemoteDb", null, htmlAttributes: new { @class = "form-select" })
            @Html.ValidationMessageFor(model => model.RemoteDb, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-1">
        @Html.LabelFor(model => model.RemoteId, htmlAttributes: new { @class = "col-form-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.RemoteId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.RemoteId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-1">
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-form-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-2">
        <div class="offset-md-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-secondary" />
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
