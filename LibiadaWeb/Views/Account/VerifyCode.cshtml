@model LibiadaWeb.Models.Account.VerifyCodeViewModel
@{
    ViewBag.Title = "Verify";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("VerifyCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("provider", @Model.Provider)
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <h4>Enter verification code</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="row mb-1">
        @Html.LabelFor(m => m.Code, new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
        </div>
    </div>
    <div class="row mb-1">
        <div class="form-check">
            @Html.CheckBoxFor(m => m.RememberBrowser, new { @class = "form-check-input" })
            @Html.LabelFor(m => m.RememberBrowser, new { @class = "form-check-label" })
        </div>
    </div>
    <div class="row mb-1">
        <div class="offset-md-2 col-md-10">
            <input type="submit" class="btn btn-secondary" value="Submit" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
