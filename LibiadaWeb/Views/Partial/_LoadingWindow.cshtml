<div class="modal fade" id="loadingDialog" tabindex="-1" role="dialog" aria-labelledby="loadingDialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 ng-bind="$ctrl.loadingScreenHeader"></h1>
            </div>
            <div class="modal-body">
                <div class="progress">
                    <div class="progress-bar progress-bar-info progress-bar-striped active"
                         role="progressbar"
                         aria-valuenow="100"
                         aria-valuemin="0"
                         aria-valuemax="100"
                         style="width: 100%">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
